{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
